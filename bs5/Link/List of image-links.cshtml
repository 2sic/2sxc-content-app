@inherits Custom.Hybrid.RazorTyped
@using ToSic.Razor.Blade;
@using ThisApp.Code
@using ThisApp.Data

<div class="row">
  @foreach (var link in AsItems<Link>(MyItems)) {
    <div class="col-md-6 col-lg-4 mb-4 mb-md-5 co-linkblock" @Kit.Toolbar.Default(link)>

      @if (link.IsNotEmpty("Image"))
      {
        <figure class="effect-zoom">
          @link.Picture("Image", settings: "Content", factor: "1/3", imgAltFallback: link.Title)
        </figure>
      } else {
        <div class="bg-primary placeholder"></div>
      }

      <h4>@link.Title</h4>
      @if (link.IsNotEmpty("Description")) {
        <p>@link.Html("Description", tweak: t => t.Input(Tags.Nl2Br))</p>
      }
      
      @if (link.IsNotEmpty("Link")) {
        <a href='@link.LinkUrl' target='@link.WindowAuto' title="@link.Title" class="stretched-link">@link.Get("LinkText") <i class="fas fa-chevron-right" aria-hidden="true"></i></a>
      }
    </div>
  }
</div>

@Html.Partial("../shared/Assets.cshtml", new { parts = "scripts,icons"})