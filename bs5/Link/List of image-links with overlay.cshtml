@inherits AppCode.Razor.Links
@using AppCode.Data

<div class="row">
  @foreach (var link in MyLinks)
  {
    <div class="col-md-6 col-lg-4 mb-3 mb-md-4 co-linkblock co-linkblock-overlay" @Kit.Toolbar.Default(link)>

      @if (link.IsNotEmpty("Image"))
      {
        <figure class="effect-zoom">
          @link.Picture("Image", settings: "Content", factor: "1/3", imgAltFallback: link.Title)
          
          <div class="overlay w-100 p-4 h-100 d-flex flex-column justify-content-between">
            <div>
              <h4>@link.Title</h4>
              @link.DescriptionHtml(false)
            </div>
            @if (link.IsNotEmpty("Link"))
            {
              <div>
                <a href='@link.Link' target='@link.WindowAuto' title="@link.Title" class="btn btn-primary stretched-link w-auto">@link.Get("LinkText") <i class="fas fa-chevron-right" aria-hidden="true"></i></a>
              </div>
            }
          </div>
        </figure>          
      }
      else
      {
        <div class="bg-primary placeholder"></div>
      } 
    </div>
  }
</div>

@Html.Partial("../shared/Assets.cshtml", new { parts = "scripts,icons"})