@inherits AppCode.Razor.LinksRazor
@using AppCode.Data

@{
  var link = MyLink;
  var headingTag = As<TextMediaPresentation>(link.Presentation).HeadingType;
}

<div class="text-center py-5" @Kit.Toolbar.Default(link)>
  
  @if (headingTag != "hide")
  {
    @Kit.HtmlTags.Custom(headingTag).Wrap(
      link.Title
    )

    <p class="lead">@link.Description</p>
  }

  @if (link.IsNotEmpty("Link"))
  {
    <a href='@link.Link' target='@link.WindowAuto' title="@link.Title" class="btn btn-lg btn-primary">
      <i class='co-icon fas @link.IconAuto' aria-hidden="true"></i>
      <span>@link.LinkText</span>
    </a>
  }

</div>

@Html.Partial("../shared/Assets.cshtml", new { parts = "icons"})