@inherits Custom.Hybrid.RazorTyped
@using ToSic.Razor.Blade
@using ThisApp.Code
@using ThisApp.Links
@{
  var linkInfo = new LinkSpecs(Kit, MyItem);
  var headingTag = MyItem.Presentation.String("HeadingType");
}

<div class="text-center py-5" @Kit.Toolbar.Default(MyItem)>
  
  @if (headingTag != "hide") {
    var t = Kit.HtmlTags; // Get HtmlTags service for shorter code
    @t.Custom(headingTag).Class("mb-4").Wrap(
      MyItem.Title,
      t.Br(),
      t.Small(MyItem.Get("Description"))
    )
  }

  @if (linkInfo.Found) {
    <a href='@MyItem.Url("Link")' target='@linkInfo.Window' title="@MyItem.Title" class="btn btn-lg btn-outline-primary">
      <i class='co-icon fas @linkInfo.Icon' aria-hidden="true"></i>
      <span>@MyItem.Get("LinkText")</span>
    </a>
  }
</div>

@Html.Partial("../shared/Assets.cshtml", new { parts = "icons"})