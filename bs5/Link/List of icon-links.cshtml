@inherits Custom.Hybrid.RazorTyped
@using ToSic.Razor.Blade;
@using ThisApp.Code
@using ThisApp.Links

<div class="row">
@foreach (var link in MyItems) {
  var linkInfo = new LinkSpecs(Kit, link);

  <div class="col-md-6 col-lg-4 mb-4 mb-md-5 co-linkblock" @Kit.Toolbar.Default(link)>
    <i class='mb-3 text-primary fas @linkInfo.Icon' aria-hidden="true" style="font-size: 40px;"></i>
    <h4>@link.Title</h4>
    <p>@link.Html("Description", tweak: t => t.Input(Tags.Nl2Br))</p>

    @if (linkInfo.Found) {
      <a href='@link.Url("Link")' target='@linkInfo.Window' title="@link.Title" class="stretched-link">@link.Get("LinkText") <i class="fas fa-chevron-right" aria-hidden="true"></i></a>
    }
  </div>
}
</div>

@Html.Partial("../shared/Assets.cshtml", new { parts = "scripts,icons"})