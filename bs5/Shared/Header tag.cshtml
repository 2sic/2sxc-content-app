@inherits Custom.Hybrid.RazorTyped
@using ToSic.Razor.Blade;
@*
  this is a sub template which is re-used in many other templates.
  it shows the header text inside an H-tag, but the number comes from the presentation settings
*@
@{
  // Get Item to show title for as passed in by the parent template
  var item = MyModel.Item("Item");
  var headingType = MyModel.String("HeadingType", fallback: item.Presentation.String("HeadingType"));

  // if the heading type is "hide", we don't show anything
  if (headingType == "hide") { return; }
}
@* Create an HTML tag which has the h1, h2 etc. from the heading type*@
@Kit.HtmlTags.Custom(headingType, item.Title)
