@* Use custom Razor base class located in /ThisApp/Razor with additional helpers *@
@inherits ThisApp.Razor.TextImageBase
@using ThisApp
@using ThisApp.Data

@*** This Template is used in ca. 3 Views which only show the title and the text ***@

@{
  var settings = As<TextOnlyViewSettings>(MyView.Settings);
}

@* Show list header if necessary for configuration *@
@Html.Partial("../shared/Content List Header.cshtml")

@* Show all the content-items - one or more *@
@foreach (var item in Helpers.PrepareList(AsItems<TextImage>(MyItems)))
{
  <div class='row @item.RowClass'>
    <div class='col-md-@settings.ColsElement1 offset-md-@settings.ColsPaddingLeft @settings.Styling' @Helpers.TextImageToolbar(item, hideImage: true, hideText: false)>
      @Helpers.ShowTitle(item)
      @item.Html("Text", toolbar: false)
    </div>
  </div>
}

@Html.Partial("../shared/Assets.cshtml", new { parts = "scripts"})
