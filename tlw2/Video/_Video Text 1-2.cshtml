@inherits ToSic.Sxc.Dnn.RazorComponent
@using ToSic.Razor.Blade;

@{
  var videoId = System.Text.RegularExpressions.Regex.Match(Content.VideoLink, "v=([^&]+)");
  var youtubeMatch = new System.Text.RegularExpressions.Regex(@"youtu(?:\.be|be\.com)/(?:.*v(?:/|=)|(?:.*/)?)([a-zA-Z0-9-_]+)").Match(Content.VideoLink);
}
<div class="max-w-full mb-10 md:mb-16">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-8 text-left" @Edit.TagToolbar(Content)>
    <div class="col-span-2 order-6">
      @* call sub-template to show the title with the correct H1-H6 tag *@
      <div class="text-2xl lg:text-3xl mb-2.5">@RenderPage("../shared/_Header tag.cshtml")</div>
      <div class="leading-relaxed" >@Html.Raw(Content.Text)</div>
    </div>
    <div class="order-1">
      @RenderPage("_Video-Part.cshtml", new { width = 640, height = 360 })
    </div>
  </div>
</div>

@RenderPage("../shared/_Assets.cshtml", new { parts = "styles,fancybox,icons"})