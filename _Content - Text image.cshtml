@* this is to support multiple CSS frameworks - see http://connect-koi.net/ *@
@using Connect.Koi

@* put all necessary link/script tags here *@
@RenderPage("shared/_Assets.cshtml", new { parts = "fancybox,styles,scripts"})

<div class="co-container-outer">
	<div class="co-container-inner clearfix sc-element co-content co-content-image-right co-text-beside-image mb-4">
		<div class="row">
			@Edit.Toolbar(Content)
			<div @Koi.Class("bs3='col col-sm-6' bs4,oth='col-md-6'")>
				@* call sub-template to show the title with the correct H1-H6 tag *@
				@RenderPage("shared/_Header tag.cshtml")
				<div class="co-text">
					@Html.Raw(Content.Text)
				</div>
			</div>
			<div @Koi.Class("bs3='col col-sm-6' bs4,oth='col-md-6'")>
				@* call sub-template to show the image with all possible options *@
				@RenderPage("shared/_Image and optional Lightbox.cshtml", new { img = Content, width = 540 })
			</div>
		</div>
	</div>
</div>
