<link rel="stylesheet" href="@App.Path/dist/styles.css" data-enableoptimizations="true" />

@{
    var Helpers = CreateInstance("_Helpers.cshtml");
    var LinkType = Helpers.LinkType(Content);
}

<div class="co-button-wrapper text-center sc-element">
    @Edit.Toolbar(Content)
    <div class="co-title">
        @if(Presentation.HeadingType != "hide")
        {
            @Html.Raw("<" + Presentation.HeadingType + ">")
                @Content.Title
                <br/>
                <small>@Content.Description</small>
            @Html.Raw("</" + Presentation.HeadingType + ">")
        }
    </div>
    @if(LinkType != "none") {
        <a 
        target="@(Content.Window != "auto" ? Content.Window : (LinkType == "internal" ? "_self" : "_blank"))"
        class="btn btn-primary"
        href="@Content.Link">
            <i class="co-icon glyphicon @(!String.IsNullOrEmpty(Content.Icon) ? Content.Icon : (LinkType == "file" ? "glyphicon-file" : "glyphicon-new-window"))" aria-hidden="true"></i>
            @Content.LinkText
        </a>
    }
</div>