@inherits Custom.Hybrid.Razor12
@using ToSic.Razor.Blade;
@using ToSic.Sxc.Services;
@{
  // Most Params come come from System-Settings, Height from View Settings
  var height = (int)(Settings.ImageHeight ?? 400); // Should be set on all banner-views
  var imgSvc = GetService<IImageService>();
  var bannerSettings = imgSvc.Settings(Settings.Images.Content, height: height);
}

<div class="co-container-outer">
  <div class="co-container-inner">
    <div class="co-header" @Edit.TagToolbar(Content)>
      @imgSvc.Picture(Content.Field("Image"), settings: bannerSettings, imgClass:"w-100")
    </div>
  </div>
</div>

@Html.Partial("../shared/_Assets.cshtml", new { parts = "styles" })