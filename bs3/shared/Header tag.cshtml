@inherits Custom.Hybrid.Razor14
@using ToSic.Razor.Blade;
@*
  this is a sub template which is re-used in many other templates.
  it shows the header text inside an H-tag, but the number comes from the presentation settings
*@
@{
  // Get Item to show title for as passed in by the parent template
  var item = DynamicModel.Item;
  var headingType = Text.First(DynamicModel.HeadingType, Content.Presentation.HeadingType);
}
@if (headingType != "hide") {
  @Kit.HtmlTags.Custom(headingType, item.Title)
}