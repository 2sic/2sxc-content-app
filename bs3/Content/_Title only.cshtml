@inherits ToSic.Sxc.Dnn.RazorComponent
@{
  var hasMultipleItems = AsList(Data).Count() > 1;
}

@* This adds all link/script tags *@
@RenderPage("../shared/_Assets.cshtml", new { parts = "styles,scripts"})

<div class='@(hasMultipleItems && Edit.Enabled ? "pt-4" : "")' @(hasMultipleItems ? Edit.TagToolbar(Header) : "")>
  @foreach (var contentItem in AsList(Data))
  {
    <div class="co-container-outer">
      <div class="co-container-inner clearfix co-content" @Edit.TagToolbar(contentItem, toolbar: new [] { "-new", "+new?contentType=Content&prefill:VarShowImage=false&prefill:VarShowText=false", "remove" })>
        @* call sub-template to show the title with the correct H1-H6 tag *@
        @RenderPage("../shared/_Header tag.cshtml")
      </div>
    </div>
  }
</div>