@inherits Custom.Hybrid.Razor12
@{
  /* This Template is used in ca. 5 Views which show title, text and image */

  // Determine the widths of each part, based on 12 Bootstrap Cols
  const int bsColumns = 12;
  var colsText = Settings.TextFirst ? Settings.ColsElement1 : bsColumns - Settings.ColsElement1;
  var colsImg = bsColumns - colsText;
}
<div class="co-container-outer mb-4 mb-md-5">
  <div class="co-container-inner row" @Edit.TagToolbar(Content)>
    <div class='col-md-@colsText order-@(Settings.TextFirst ? "first" : "last")'>
      @* call sub-template to show the title with the correct H1-H6 tag *@
      @Html.Partial("../shared/_Header tag.cshtml")

      @* If the image doesn't have it's own column, its between title/text *@
      @if(colsImg == 0) {
        @Html.Partial("_Part Image.cshtml", new { Item = Content })
      }

      @Html.Raw(Content.Text)
    </div>
    @* If the image has it's own column, it's here *@
    @if(colsImg != 0) {
      <div class='col-md-@colsImg order-@(Settings.TextFirst ? "last" : "first")'>
        @* call sub-template to show the image with all possible options *@
        @Html.Partial("_Part Image.cshtml", new { Item = Content, Columns = colsImg })
      </div>
    }
  </div>
</div>

@Html.Partial("../shared/_Assets.cshtml", new { parts = "fancybox,styles,scripts"})