@inherits ToSic.Sxc.Dnn.RazorComponent
@*
  Bootstrap 3 - read the readme.md section "CSS Framework Detection"
*@
@if(Connect.Koi.Koi.Is("bs3")) {
  @RenderPage("../bs3/Content/_Image full-width text.cshtml")
  return;
}
@*
  Bootstrap 4 or Unknown CSS Framework
*@
@RenderPage("../bs4/shared/_Assets.cshtml", new { parts = "fancybox,styles,scripts"})

<div class="co-container-outer mb-4 mb-md-5">
	<div class="co-container-inner" @Edit.TagToolbar(Content)>
		<div class="row">
			<div class="col-md-12">
				@* call sub-template to show the title with the correct H1-H6 tag *@
				@RenderPage("../shared/_Header tag.cshtml")

				@* call sub-template to show the image with all possible options *@
				@RenderPage("_ContentImage.cshtml", new { img = Content, width = 700 })

				@Html.Raw(Content.Text)
			</div>
		</div>
	</div>
</div>