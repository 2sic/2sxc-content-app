@inherits ToSic.Sxc.Dnn.RazorComponent
@*
  Bootstrap 3 - read the readme.md section "CSS Framework Detection"
*@
@if(Connect.Koi.Koi.Is("bs3")) {
  @RenderPage("../bs3/Content/_Text only centered.cshtml")
  return;
}
@*
  Bootstrap 4 or Unknown CSS Framework
*@
@RenderPage("../bs4/shared/_Assets.cshtml", new { parts = "styles,scripts"})

<div class="co-container-outer mb-4 mb-md-5">
	<div class="co-container-inner">
    <div class="row">
      <div class="text-center col-md-8 offset-md-2" @Edit.TagToolbar(Content)>
          @* call sub-template to show the title with the correct H1-H6 tag *@
          @RenderPage("../shared/_Header tag.cshtml")
          @Html.Raw(Content.Text)
      </div>
    </div>
  </div>
</div>